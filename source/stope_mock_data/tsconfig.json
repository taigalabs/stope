{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "es2022",
    "moduleResolution": "node",
    "target": "ESNext",
    "strictNullChecks": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "outDir": "dist",
    "lib": ["esnext"],
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@stope_mock_data/*": ["./src/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
